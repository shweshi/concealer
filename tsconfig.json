{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "lib": ["es6", "dom", "es2017"],
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "*": ["./node_modules/*"],
      "@src/*": ["./src/*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules"]
}
